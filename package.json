{
  "name": "@tktco/node-actionlint",
  "version": "1.5.0",
  "description": "",
  "type": "module",
  "main": "src/index.js",
  "bin": "bin/node-actionlint.js",
  "types": "./build/index.d.ts",
  "files": [
    "build",
    "bin",
    "wasm_exec.js",
    "main.wasm",
    "LICENSE.txt"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "npm run build:go && npm run build:tsc",
    "build:go": "make install && make build",
    "build:tsc": "tsc",
    "lint": "npm run lint:tsc && npm run lint:prettier",
    "lint:tsc": "tsc --noEmit",
    "lint:prettier": "prettier --check .",
    "lint:fix": "npm run lint:prettier -- --write",
    "test": "npm run build:tsc && node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "release": "node ./scripts/release.js"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "./jest.setup.js"
    ],
    "transformIgnorePatterns": [
      "/node_modules/(?!chalk)/"
    ],
    "moduleNameMapper": {
      "^../../wasm_exec.js$": "<rootDir>/wasm_exec.js"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@babel/code-frame": "^7.27.1",
    "chalk": "^5.4.1",
    "fast-glob": "^3.3.3"
  },
  "devDependencies": {
    "@types/babel__code-frame": "^7.0.6",
    "execa": "^9.6.0",
    "jest": "^29.7.0",
    "minimist": "^1.2.8",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3"
  }
}
